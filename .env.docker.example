# ==============================================================================
# Environment Variables for Docker
# Copy this file to .env and fill in your actual values
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_USER=crmuser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=food_orders_crm
POSTGRES_PORT=5432

# Database URLs for Prisma
DATABASE_URL="postgresql://crmuser:your_secure_password_here@db:5432/food_orders_crm?schema=public"
DIRECT_URL="postgresql://crmuser:your_secure_password_here@db:5432/food_orders_crm?schema=public"

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379
REDIS_URL="redis://:your_redis_password_here@redis:6379"

# ------------------------------------------------------------------------------
# Clerk Authentication
# ------------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_here

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
APP_PORT=3000
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ------------------------------------------------------------------------------
# Nginx Configuration (Production)
# ------------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ------------------------------------------------------------------------------
# Adminer Configuration (Development)
# ------------------------------------------------------------------------------
ADMINER_PORT=8080

# ------------------------------------------------------------------------------
# Optional Services
# ------------------------------------------------------------------------------
# Uncomment for email service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Uncomment for file storage
# AWS_S3_BUCKET=your_bucket_name
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# ------------------------------------------------------------------------------
# Monitoring (Optional - for production)
# ------------------------------------------------------------------------------
# SENTRY_DSN=https://your_sentry_dsn_here
# LOG_LEVEL=info
