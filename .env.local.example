# ============================================================================
# CLERK AUTHENTICATION
# ============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Rutas de autenticación
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/food_orders_crm?schema=public"

# ============================================================================
# AUTO-CONFIRMATION SYSTEM
# ============================================================================
# Secret para proteger el endpoint de cron jobs
# Genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your_cron_secret_here

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# URL de tu aplicación (importante para CORS en producción)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# En producción, cambiar a:
# NEXT_PUBLIC_APP_URL=https://tu-dominio.com

# ============================================================================
# LOGGING/MONITORING
# ============================================================================
# Nivel mínimo de log (debug, info, warn, error, fatal)
# Default: debug en development, info en production
LOG_LEVEL=info

# Servicio de logging externo (opcional)
# Opciones: sentry, logtail, datadog, newrelic
LOGGING_SERVICE=sentry

# Sentry (para error tracking)
SENTRY_DSN=https://your-key@sentry.io/your-project-id

# Logtail (para log aggregation)
LOGTAIL_SOURCE_TOKEN=your_logtail_token_here

# Datadog (para APM)
DATADOG_API_KEY=your_datadog_api_key

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development
# En producción: NODE_ENV=production
